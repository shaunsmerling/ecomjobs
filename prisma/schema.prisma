// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  jobUrl              String?
  email               String?
  company_name        String?
  company_url         String?
  job_position        String?
  mission             String?
  logo                String?
  job_category        String?
  postedat            String?
  job_type            String?
  location            String?
  city                String?
  company_description String?
  job_description     String?
  job_requirements    String?
  application_url     String?
  company_id          String?
  empcount            String?
  companyUrl          String?
  user_id             String?
  salaryMin           String?
  salaryMax           String?
}

model Email {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
}

model Company {
  company_id          String  @id @default(auto()) @map("_id") @db.ObjectId
  company_name        String?
  company_url         String?
  logo                String?
  location            String?
  company_description String?
  applicant_name      String?
  empcount            String?
  mission             String?
  remote              Boolean?
  user_id             String?
  email               String?
  companyUrl          String?
}



model User {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  username            String?
  password            String?
  name                String?
  email               String?
  primary_role        String?
  years_of_experience String?
  open_to_roles       String?
  bio                 String?
  social_website      String?
  social_linkedin     String?
  social_github       String?
  social_twitter      String?
  work_experience_1   String?
  work_experience_2   String?
  work_experience_3   String?
  work_experience_4   String?
  ecomportal_url      String?
  skills              String?
  languages           String?
  annual_pay          String?
  hourly_pay          String?
  education           String?
  achievements        String?
  resume              String?
  profile_picture     String?
  location_base       String?
  gender              String?
  saved_jobs          String?

}
