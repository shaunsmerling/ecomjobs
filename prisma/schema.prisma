// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  jobUrl              String?
  email               String?
  company_name        String?
  company_url         String?
  job_position        String?
  mission             String?
  logo                String?
  job_category        String?
  postedat            String?
  job_type            String?
  location            String?
  city                String?
  company_description String?
  job_description     String?
  job_requirements    String?
  datets              String?
  application_url     String?
  company_id          String?
  empcount            String?
  companyUrl          String?
  user_id             String?
  salaryMin           String?
  salaryMax           String?
}

model Email {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String?
}

model Company {
  company_id          String  @id @default(auto()) @map("_id") @db.ObjectId
  company_name        String?
  company_url         String?
  logo                String?
  location            String?
  company_description String?
  applicant_name      String?
  empcount            String?
  mission             String?
  remote              Boolean?
  user_id             String?
  email               String?
  companyUrl          String?
}



model User {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  user_name           String?
  website_url         String?
  profilePicture      String?
  location            String?
  job_category        String?
  primary_role        String?
  years_of_exp        String?
  open_to_roles       String?
  bio                 String?
  linkedin            String?
  twitter             String?
  github              String?
  work_exp_1          String?
  work_exp_2          String?
  work_exp_3          String?
  work_exp_4          String?
  work_exp_5          String?
  school_name         String?
  grad_year           String?
  degree              String?
  skills              String[]
  achievements        String?

}
