{
    "name": "run-scripts",
    "builds": [
      {
        "src": "greenhouseScrape.py",
        "use": "@vercel/python"
      },
      {
        "src": "algolia_load.py",
        "use": "@vercel/python"
      }
    ],
    "functions": {
      "run-scripts": {
        "memory": 128,
        "timeout": 60
      }
    },
    "schedule": [
      {
        "cron": "0 10 * * 1,4",
        "name": "run-scripts",
        "command": "python3 -m greenhouseScrape && python3 -m algolia_load",
        "env": {
          "DB_URL": "your_db_url",
          "ALGOLIA_APP_ID": "your_algolia_app_id",
          "ALGOLIA_ADMIN_KEY": "your_algolia_admin_key"
        }
      }
    ]
  }
  